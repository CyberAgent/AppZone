nav-page(title='"AppZone"', hide-back-button='true')
  content(has-header='true', padding='true', overflow-scroll='true').appzone-login-bg

    .padding
      .appzone-welcome
        .appzone-welcome-logo
        .appzone-welcome-title(ng-bind='"LOGIN_TO_APPZONE" | translate')

      alert(ng-repeat='alert in alerts', type='alert.type', title='alert.title', message='alert.message')

    form(name='login-form')
      .list
        label.item.item-input
          //i.icon.ion-person.appzone-icon-inside-text-input
          span.input-label {{ "USER_NAME" | translate }}
          input(type='text', ng-model='username', required, autocomplete='on', name='username', id='username', autofill, autofocus)
        label.item.item-input
          //i.icon.ion-key.appzone-icon-inside-text-input
          span.input-label {{ "PASSWORD" | translate }}
          input(type='password', ng-model='password', required, autocomplete='on', name='password', id='password', autofill)
        button.button.button-assertive.button-block(ng-click='login()') {{ "LOG_IN" | translate}}